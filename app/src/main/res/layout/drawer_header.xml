<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:weightSum="1"
    android:background="@drawable/cardboard_texture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Dieter Lunn"
            android:id="@+id/drawer_header_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="dieter@dieterlunn.ca"
            android:id="@+id/drawer_header_email"/>

        </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/avatar"
        android:id="@+id/drawer_header_avatar"/>

</RelativeLayout>